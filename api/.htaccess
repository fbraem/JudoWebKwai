# Enable rewrite engine and route requests to framework

<IfModule mod_rewrite.c>
#   Options -MultiViews

    RewriteEngine On

    RewriteCond %{HTTP:Authorization} ^(.*)
    RewriteRule .* - [e=HTTP_AUTHORIZATION:%1]

    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^auth(/.*)?$ /api/auth.php$1 [L]
    RewriteRule ^categories(/.*)?$ /api/categories.php$1 [L]
    RewriteRule ^countries(/.*)?$ /api/countries.php$1 [L]
    RewriteRule ^news(/.*)?$ /api/news.php$1 [L]
    RewriteRule ^pages(/.*)?$ /api/pages.php$1 [L]
    RewriteRule ^users(/.*)?$ /api/users.php$1 [L]

    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

#php_value upload_max_filesize 15M
#php_value post_max_size 15M
